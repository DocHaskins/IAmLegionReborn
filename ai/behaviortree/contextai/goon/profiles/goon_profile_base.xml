<?xml version="1.0" encoding="UTF-8"?>
<ConstParams xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../MetaData/schema_const.xsd">
    <!-- attack max ranges -->
    <Param m_Name="$vertical_attack_min_range" m_Value="1.5"/>
    <Param m_Name="$vertical_attack_max_range" m_Value="3.5"/>
    <Param m_Name="$vertical_attack_max_angle" m_Value="50.0"/>
    <Param m_Name="$vertical_attack_behind_min_angle" m_Value="100"/>
    <Param m_Name="$horizontal_attack_max_range" m_Value="4.0"/>
    <Param m_Name="$horizontal_attack_max_angle" m_Value="75.0"/>
    <Param m_Name="$light_attack_max_range" m_Value="2.5"/>
    <Param m_Name="$light_attack_max_angle" m_Value="100.0"/>
    <Param m_Name="$aoe_attack_max_range" m_Value="2.5"/>
    <Param m_Name="$aoe_attack_min_angle" m_Value="60"/>
    <Param m_Name="$stomp_max_range" m_Value="2.5"/>
    <Param m_Name="$combat_max_range" m_Value="8.0"/>

    <!-- attack combo params -->
    <Param m_Name="$light_attack_combo_min" m_Value="2"/>
    <Param m_Name="$light_attack_combo_max" m_Value="3"/>

    <Param m_Name="$horizontal_attack_combo_min" m_Value="2"/>
    <Param m_Name="$horizontal_attack_combo_max" m_Value="3"/>

    <!-- Attacks -->
    <Param m_Name="$enable_vertical_attack" m_Value="false"/>
    <Param m_Name="$enable_horizontal_attack" m_Value="false"/>
    <Param m_Name="$enable_360_attack" m_Value="false"/>
    <Param m_Name="$enable_stomp" m_Value="false"/>
    <Param m_Name="$enable_vertical_behind_attack" m_Value="false"/>
    <Param m_Name="$enable_light_attack" m_Value="false"/>

<!-- Cooldowns -->
    <Param m_Name="$360_attack_cooldown" m_Value="10.0"/>
    <Param m_Name="$stomp_cooldown" m_Value="6.0"/>
    <Param m_Name="$light_attack_cooldown" m_Value="6.0"/>
    <Param m_Name="$vertical_attack_cooldown" m_Value="6.0"/>
    <Param m_Name="$vertical_attack_behind_cooldown" m_Value="6.0"/>

    <Param m_Name="$attack_stand_dir_correction_speed" m_Value="60.0"/>
    <!-- other consts -->
    <Param m_Name="$target_prediciton_time" m_Value="0.1"/>
    <Param m_Name="$movestyle" m_Value="Trot"/>

    <Param m_Name="$death_snap_angle" m_Value="0"/>
    <Param m_Name="$ragdoll_death_chance" m_Value="0.0"/>
    <Param m_Name="$hit_snap_angle" m_Value="0"/>
    <Param m_Name="$start_resting_state" m_Value="false"/>
    <!-- Hit progression -->
    <Param m_Name="$enable_hit_phase_incremental" m_Value="true"/>
    <Param m_Name="$hit_phase_incremental_reset_time" m_Value="3.0"/>
    <Param m_Name="$enable_hit_phase_use_remaining_health_only" m_Value="false"/>
    <Param m_Name="$hit_phase_min" m_Value="1"/>
    <Param m_Name="$hit_phase_max" m_Value="4"/>
    <!-- weapon -->
    <Param m_Name="$enable_weapon_change" m_Value="false"/>
    <Param m_Name="$enable_weapon_set" m_Value="true"/>
    <Param m_Name="$use_avoidance" m_Value="false"/>
    <Param m_Name="$avoid_regions_preset" m_Value="zombie"/>
    <Param m_Name="$hunting_mod" m_Value="false"/>

    <Param m_Name="$disable_parkour_ragdoll" m_Value="true"/>
</ConstParams>
