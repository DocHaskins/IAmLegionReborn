<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <SequenceMem>
        <Cnd_IsCombatTargetInRange m_Radius="$attack_fury_charge_max_range" m_Angle="$attack_fury_charge_max_angle"/>
        <Opr_SetDirCorrectionSpeed m_MaxSpeed="$attack_fury_charge_dir_correction_speed"/>
        <Opr_SetPosCorrectionSpeed m_MaxSpeed="$attack_pos_correction_speed"/>
        <Opr_SetBBValue_bool m_Key="#trigger_fury_followup" m_Value="false"/>
        <Act_Attack m_Target="#target" m_AttackPresetName="human_fury_charge" m_Phase="0" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
        <Parallel m_PolicySuccess="REQUIRE_ONE" m_PolicyFailure="REQUIRE_ONE">
            <Act_Attack m_Target="#target" m_AttackPresetName="human_fury_charge" m_Phase="1" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
            <Selector>
                <Trigger m_Key="#trigger_fury_followup">
                    <RunUntilSuccess>
                        <Sequence>
                            <Cnd_CanAttackCombo/>
                            <Cnd_IsCombatTargetInRange m_Radius="$attack_fury_charge_followup_max_range" m_Angle="$attack_fury_charge_followup_max_angle"/>
                            <Cnd_IsTargetInAir m_Target="#target" m_Invert="true"/>
                        </Sequence>
                    </RunUntilSuccess>
                </Trigger>
                <RunUntilSuccess>
                    <DelayerTimeDelta m_DelayTime="0.2">
                        <Cnd_SpaceInSimpleDirection m_Direction="FORWARD" m_CheckHalfAngle="10" m_MinRequiredSpace="1" m_Invert="true"/>
                    </DelayerTimeDelta>
                </RunUntilSuccess>
            </Selector>
        </Parallel>
        <SelectorMem>
            <Starter m_Key="#trigger_fury_followup">
                <Act_Attack m_Target="#target" m_AttackPresetName="human_fury_charge" m_Phase="2" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
            </Starter>
            <Act_Attack m_Target="#target" m_AttackPresetName="human_fury_charge" m_Phase="3" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
        </SelectorMem>
    </SequenceMem>
</BehaviorTree>
