<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <SequenceMem>
        <Cnd_IsTargetInAir m_Target="#target" m_Invert="true"/>
        <Cnd_IsCombatTargetInRange m_Radius="$attack_power_max_range" m_Angle="$attack_power_max_angle"/>
        <Cnd_IsCombatTargetMeleeReachable/>
        <Cnd_AllyInLineOfFire m_Target="#target" m_CheckMelee="true" m_SpaceNeeded="$attack_min_space" m_Invert="true"/>
        <Opr_SetDirCorrectionSpeed m_MaxSpeed="$attack_power_dir_correction_speed"/>
        <Opr_SetPosCorrectionSpeed m_MaxSpeed="$attack_pos_correction_speed"/>
        <SetFlagOnRunning m_Key="#can_attack_recoil">
            <SelectorMem>
                <SequenceMem>
                    <Cnd_IsBBValueEqual_string m_Key="#morale_state" m_Value="cautious"/>
                    <Act_Attack m_Target="#target" m_AttackPresetName="human_1h_power_cautious" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="BLENDOUT" m_DecisionPolicy="ON_END"/>
                </SequenceMem>
                <Act_Attack m_Target="#target" m_AttackPresetName="human_1h_power_aggressive" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="BLENDOUT" m_DecisionPolicy="ON_END"/>
            </SelectorMem>
        </SetFlagOnRunning>
    </SequenceMem>
</BehaviorTree>
