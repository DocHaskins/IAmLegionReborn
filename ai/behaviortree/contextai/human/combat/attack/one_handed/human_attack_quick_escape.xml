<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <SequenceMem>
        <Cnd_IsCombatTargetInRange m_Radius="$attack_quick_max_range" m_Angle="$attack_quick_max_angle"/>
        <Cnd_IsCombatTargetMeleeReachable/>
        <Opr_SetDirCorrectionSpeed m_MaxSpeed="$attack_quick_dir_correction_speed"/>
        <Opr_SetPosCorrectionSpeed m_MaxSpeed="$attack_pos_correction_speed"/>
        <SetFlagOnRunning m_Key="#can_attack_recoil">
            <Act_Attack m_Target="#target" m_AttackPresetName="human_1h_escape" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="INTERRUPT" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
        </SetFlagOnRunning>
        <Optional m_Enabled="$enable_attack_step_back">
            <SelectorMem>
                <Cnd_SpaceInSimpleDirection m_Direction="BACKWARD" m_MinRequiredSpace="$enviro_space_required" m_CheckHalfAngle="$enviro_space_half_angle" m_Invert="true"/>
                <SequenceMem>
                    <Opr_SetDirCorrectionSpeed m_MaxSpeed="$step_dir_correction_speed"/>
                    <Act_Step m_Direction="BACKWARD" m_Type="ESCAPE" m_Style="Cautious" m_Target="#target" m_StartPolicy="INTERRUPT" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
                </SequenceMem>
            </SelectorMem>
        </Optional>
    </SequenceMem>
</BehaviorTree>
