<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <SequenceMem>
        <Cnd_IsTargetInAir m_Target="#target" m_Invert="true"/>
        <Cnd_IsCombatTargetInRange m_Radius="$attack_power_swing_max_range" m_Angle="$attack_power_swing_max_angle"/>
        <Cnd_IsCombatTargetMeleeReachable/>
        <Cnd_AllyInLineOfFire m_Target="#target" m_CheckMelee="true" m_SpaceNeeded="$attack_min_space" m_Invert="true"/>
        <Opr_SetDirCorrectionSpeed m_MaxSpeed="$attack_power_swing_dir_correction_speed"/>
        <Opr_SetPosCorrectionSpeed m_MaxSpeed="$attack_pos_correction_speed"/>
        <Opr_SetBBValue_int m_Key="#attack_phase" m_Value="2"/>
        <Opr_Trigger m_Key="#trigger_power_swing_combo"/>
        <Succeeder>
            <RepeatOnceOnSuccess>
                <Starter m_Key="#trigger_power_swing_combo">
                    <Parallel m_PolicySuccess="REQUIRE_ONE" m_PolicyFailure="REQUIRE_ONE">
                        <Act_Attack m_Target="#target" m_AttackPresetName="human_2h_swing_combo" m_Phase="#attack_phase" m_EnablePosCorrection="$enable_attack_pos_correction" m_StartPolicy="DISCARD" m_AbandonPolicy="INTERRUPT" m_DecisionPolicy="WHEN_POSSIBLE"/>
                        <RunUntilSuccess>
                            <Sequence>
                                <Cnd_IsBBValueGreater_int m_Key="#attack_phase" m_Value="$attack_power_swing_combo_min_phase"/>
                                <Cnd_CanAttackCombo/>
                                <Cnd_HasCombatTargetNoControl m_Invert="true"/>
                                <Cnd_IsCombatTargetInRange m_Radius="$attack_power_swing_combo_max_range" m_Angle="$attack_power_swing_combo_max_angle"/>
                                <Opr_DecrementBBValue_int m_Key="#attack_phase" m_Amount="1"/>
                                <Opr_Trigger m_Key="#trigger_power_swing_combo"/>
                            </Sequence>
                        </RunUntilSuccess>
                    </Parallel>
                </Starter>
            </RepeatOnceOnSuccess>
        </Succeeder>
    </SequenceMem>
</BehaviorTree>
