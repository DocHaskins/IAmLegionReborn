<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <Parallel m_PolicySuccess="REQUIRE_ONE" m_PolicyFailure="REQUIRE_ONE">
        <Sequence>
            <SelectorMem>
                <Cnd_IsCombatTargetInAngle m_Angle="90"/>
                <Act_TurnToPos m_Position="#target_pos" m_Type="Combat" m_StartPolicy="INTERRUPT" m_AbandonPolicy="BLENDOUT" m_DecisionPolicy="ON_END"/>
            </SelectorMem>
            <SequenceMem>
                <Optional m_Enabled="$enable_forced_combat_idle_start_position">
                    <Act_StrafeToDestination m_Destination="#forced_combat_idle_position" m_Style="Aggressive" m_Speed="1" m_SpringUpdateSpeed="$strafe_spring_update_speed" m_EndRadius="$strafe_end_radius" m_StartPolicy="INTERRUPT" m_AbandonPolicy="BLENDOUT" m_DecisionPolicy="ON_END"/>
                </Optional>
                <Act_Idle m_Type="Stand" m_StartPolicy="INTERRUPT" m_AbandonPolicy="BLENDOUT"/>
            </SequenceMem>
        </Sequence>
        <Runner>
            <ExternalTree m_UID="HUMAN_WEAPON_PULL_OUT" m_CustomName="PullOutWeapon" m_Hide="true"/>
        </Runner>
    </Parallel>
</BehaviorTree>
