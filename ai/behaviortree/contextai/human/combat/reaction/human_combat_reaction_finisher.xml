<?xml version="1.0"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <CooldownUntil m_TimePoint="#finisher_cooldown" m_CooldownTime="$attack_finisher_cooldown" m_CooldownOnAbort="true">
        <SequenceMem>
            <Cnd_CanStartTask m_StartPolicy="INTERRUPT"/>
            <Cnd_IsPlayer m_Target="#target" m_Invert="true"/>
            <!-- <Cnd_IsTargetInState m_Target="#target" m_State="VICTIM"/> -->
            <Cnd_IsCombatTargetInRange m_Radius="$attack_finisher_max_range" m_Angle="$attack_finisher_max_angle"/>
            <Cnd_IsCombatTargetMeleeReachable/>
            <CombatSlot m_Name="$attack_finisher_token" m_Limit="$attack_finisher_limit" m_MinDelay="$attack_finisher_min_delay" m_Cost="0">
                <ExternalTree m_UID="HUMAN_ATTACK_FINISHER" m_CustomName="Finisher" m_Hide="true"/>
            </CombatSlot>
        </SequenceMem>
    </CooldownUntil>
</BehaviorTree>
