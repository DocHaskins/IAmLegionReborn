<?xml version="1.0"?>
<ConstParams xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../MetaData/schema_const.xsd">
    <!-- overrides - one handed -->
    <Param m_Name="$enable_combat_one_handed" m_Value="true"/>
    <Param m_Name="$enable_hit_breaker" m_Value="true"/>
    <Param m_Name="$enable_attack_recoil" m_Value="true"/>
	<Param m_Name="$enable_attack_recoil_stunned_state" m_Value="true"/>																	
    <Param m_Name="$enable_dodge_on_spot" m_Value="true"/>
    <Param m_Name="$enable_dodge_melee" m_Value="true"/>
	<Param m_Name="$combat_slot_melee_limit" m_Value="15"/>
	<!-- overrides - bow -->
    <Param m_Name="$enable_combat_bow" m_Value="true"/>
	<Param m_Name="$enable_search" m_Value="true"/>
    <Param m_Name="$enable_poi_inspection" m_Value="true"/>
	<!-- defensive moves -->
    <Param m_Name="$attack_push_max_range" m_Value="3.5"/>
    <!-- bow - single shot -->
    <Param m_Name="$enable_bow_shot_single" m_Value="true"/>
    <Param m_Name="$bow_shot_single_cooldown" m_Value="1"/>
    <!-- bow - combo shot -->
    <Param m_Name="$enable_bow_shot_combo" m_Value="false"/>
    <!-- bow - multi shot -->
    <Param m_Name="$enable_bow_shot_multi" m_Value="false"/>
    <!-- bow - common -->
    <Param m_Name="$bow_aim_delay" m_Value="0.75"/>
    <Param m_Name="$bow_arrow_speed" m_Value="20"/>
    <Param m_Name="$bow_arrow_correction_angle" m_Value="0"/>
</ConstParams>
