<?xml version="1.0" encoding="UTF-8"?>
<ConstParams xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../MetaData/schema_const.xsd">
    <!-- dir correction speed -->
    <Param m_Name="$scream_dir_correction_speed" m_Value="240.0"/>
    <Param m_Name="$dodge_dir_correction_speed" m_Value="240.0"/>
    <Param m_Name="$hit_reaction_dir_correction_speed" m_Value="240.0"/>
    <Param m_Name="$flashlight_dodge_dir_correction_speed" m_Value="240.0"/>
    <Param m_Name="$target_prediciton_time" m_Value="0.5"/>
    <Param m_Name="$summon_attack_preset" m_Value="summon_without_damage"/>
    <Param m_Name="$use_fx_for_scream" m_Value="1"/>
	<Param m_Name="$trail_min_range" m_Value="30.0"/>
    <!-- sensor presets -->
    <Param m_Name="$start_resting_state" m_Value="false"/>

    <!-- Death Reactions -->
    <Param m_Name="$death_snap_angle" m_Value="90"/>
    <Param m_Name="$ragdoll_death_chance" m_Value="1.0"/>

    <!-- Hit Reactions -->
    <Param m_Name="$hit_snap_angle" m_Value="90"/>

    <Param m_Name="$hit_phase_min" m_Value="0"/>
    <Param m_Name="$hit_phase_max" m_Value="4"/>
    <Param m_Name="$hit_phase_incremental_reset_time" m_Value="6"/>
    <Param m_Name="$enable_hit_phase_incremental" m_Value="false"/>
    <Param m_Name="$enable_hit_phase_use_remaining_health_only" m_Value="false"/>

    <!-- weapon -->
    <Param m_Name="$enable_weapon_change" m_Value="false"/>
    <Param m_Name="$enable_weapon_set" m_Value="false"/>
    <!-- Attacks / screams -->
    <Param m_Name="$enable_stunning_scream" m_Value="true"/>
    <Param m_Name="$stunning_scream_cooldown" m_Value="5"/>
    <Param m_Name="$stunning_scream_range" m_Value="25"/>
    <Param m_Name="$stunning_scream_angle" m_Value="15"/>

    <Param m_Name="$enable_push" m_Value="true"/>
    <Param m_Name="$push_cooldown" m_Value="5"/>

    <!-- Movement -->
	<Param m_Name="$movestyle" m_Value="Run"/>
    <Param m_Name="$enable_dodge" m_Value="true"/>
    <Param m_Name="$dodge_cooldown" m_Value="15"/>
    <Param m_Name="$enable_dodge_without_hit_reaction" m_Value="true"/>

    <Param m_Name="$enable_step" m_Value="true"/>
    <Param m_Name="$use_avoidance" m_Value="false"/>
    <Param m_Name="$avoid_regions_preset" m_Value="zombie"/>

    <!-- UV light death -->
    <Param m_Name="$min_time_in_uv_to_die" m_Value="9.0"/>
    <Param m_Name="$max_time_in_uv_to_die" m_Value="12.0"/>
    <Param m_Name="$min_time_in_sunlight_to_die" m_Value="9.0"/>
    <Param m_Name="$max_time_in_sunlight_to_die" m_Value="12.0"/>

    <Param m_Name="$disable_parkour_ragdoll" m_Value="false"/>
</ConstParams>
