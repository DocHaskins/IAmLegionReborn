<?xml version="1.0" encoding="UTF-8"?>
<BehaviorTree xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../MetaData/schema_ai.xsd" m_ContextType="ai">
    <CooldownTimeDelta m_CooldownTime="1.0" m_StatusReturned="SUCCESS">
		<Selector>
			<Cnd_IsAlertLevelEqual m_AlertLevel="High" m_Invert="true"/>
			<Cnd_IsBBValueEqual_bool m_Key="#flag_combat_rest" m_Value="true"/>
			<Cnd_IsActivityModuleRunning_SyncAction/>			
			<Sequence>
				<Opr_GetLocalPlayer m_Player="#player"/>
				<Opr_GetObjectPosition m_Object="#player" m_Position="#player_pos"/>
				<Opr_MakeNoise m_NoiseUid="volatile_groan" m_Position="#player_pos"/>
			</Sequence>
		</Selector>
	</CooldownTimeDelta>
</BehaviorTree>
